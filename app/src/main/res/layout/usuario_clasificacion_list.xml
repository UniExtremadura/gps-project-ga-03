<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clUsuarioClasificacion"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvUsuarioClasificacion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivUsuarioClasificacion"
                android:layout_width="70dp"
                android:layout_height="120dp"
                android:contentDescription="show user image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvUsuarioClasificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Nombre de usuario"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintBottom_toBottomOf="@+id/ivUsuarioClasificacion"
                app:layout_constraintStart_toEndOf="@+id/ivUsuarioClasificacion"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.177" />

            <TextView
                android:id="@+id/tvPuntosUsuarioClasificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Puntos"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/tvUsuarioClasificacion"
                app:layout_constraintTop_toBottomOf="@+id/tvUsuarioClasificacion" />

            <!--Poner Puntos TO al lado de los puntos-->
            <TextView
                android:id="@+id/tvPuntosTOUsuarioClasificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=" Puntos TO"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tvPuntosUsuarioClasificacion"
                app:layout_constraintTop_toBottomOf="@+id/tvUsuarioClasificacion" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

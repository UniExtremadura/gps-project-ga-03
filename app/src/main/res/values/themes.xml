<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo de la Toolbar -->
    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <!-- Color de fondo de la Toolbar -->
        <item name="android:background">#000000</item> <!-- Negro -->
        <!-- Color del texto de la Toolbar -->
        <item name="android:titleTextAppearance">@style/Toolbar.TitleText</item>
    </style>

    <!-- Estilo del texto de la Toolbar -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">#DF0000</item> <!-- Rojo -->
    </style>

    <!-- Tema de la pantalla de preferencias -->
    <style name="PreferenceTheme" parent="PreferenceThemeOverlay">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/red</item>
    </style>

</resources>